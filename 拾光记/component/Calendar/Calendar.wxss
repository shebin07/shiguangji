/* component/Calendar/Calendar.wxss */

.calendar{
  width:100%;
  height: wrap;
  background: white;
}

.date_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #E6E6E6;
}

.calendar .open .week_title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  margin: 20rpx;
  border-radius: 10px;
  background-color: #F0F0F0;
}
.calendar .open .days{
  margin: 20rpx;
  padding: 10rpx;
  border-radius: 10px;
}
.columns{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.rows{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.cell{
  background: white;
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cell_special{
  background: lightsalmon;
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cell_today{
  background: #90E0EF;
  width: 84rpx;
  height: 88rpx;
  margin: 3rpx;
  text-align: center;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.close{
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}
.close_calendar{
  background: #E6E6E6;
  display:flex;
  justify-content: center;
}

.open_calendar{
  background: #E6E6E6;
  display:flex;
  justify-content: center;
  padding:green;
}
