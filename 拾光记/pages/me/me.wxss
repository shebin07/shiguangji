/* pages/me/me.wxss */
page{
  height: 100%;
}
.bg{
  background-color: #f8f8f8;
  height: 100%;
}
.me_container{
  display:block;
  
}

.me_userinfo{
  width:100%;
  height: wrap-content;
  background: #E6E6E6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.me_userinfo_avatar{
  height: 150rpx;
  width:150rpx;
  overflow:hidden;
  border-radius: 60%;
  margin-top: 30rpx;
}
.me_userinfo_nickname{
  display:block;
  margin-bottom: 30rpx;
}
.me_help{
  width:100%;
  height:100rpx;
  background: #E6E6E6;
  margin-top:30rpx;
  padding-left:60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;

}.me_help_text{
  margin-left:30rpx;
}
.cubes{
  display:flex;
  flex-direction: row;
}
.cube_img{
  background-color: #E6E6E6;
  margin-left:65rpx;
  margin-right:65rpx;
  margin-top:20rpx;
  height:auto;
  border-radius: 15%;
}