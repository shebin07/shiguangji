/* pages/memo/memo.wxss */
.page {
  position: relative;
}
.memos {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.memo-i {
  padding: 18rpx 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-top:6px solid #F0F0F0;
}
.content {
  padding: 0 28rpx;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 1px solid #00B4D8;
  color:#00B4D8;
  overflow:hidden; /*隐藏溢出*/
  text-overflow:ellipsis;/*当文本溢出包含元素时显示省略符号来代表被修剪的文本*/
  white-space:nowrap; /*规定段落中的文本不进行换行*/
}
.time {
  padding: 0 28rpx;
  line-height: 88rpx;
  color: #023E8A;
  font-size:14px;
}
.add {
  position: absolute;
  right: 58rpx;
  bottom: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border: 1px solid #888;
  border-radius: 50%;
}
.add image {
  width: 48rpx;
  height: 48rpx;
}

.empty{
  font-size:15px;
  color: lightgrey;
  width:100%;
  height:auto;
  text-align: center;   /** 水平居中 **/
}