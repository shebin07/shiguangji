/* pages/home/home.wxss */


/*背景变暗 */
.home{
  width:100%;
  height:100%;
  position: absolute;
  left:0px;
  top:0px;
}
.cover_outside_background{
  width:100%;
  height:100%;
  background-color: red;
}
/*对话框 */
.cover_page {
  height: auto;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  padding-top: 20rpx;
}
.home_tab_name{
  text-align: center;
  color: black;
  display:flex;
  flex-direction: column;
}
/*Item的显示文本的样式*/
.sepText{
  display:block;
  text-align:left;
}
.listItem{
  padding: 30rpx;
  border-color: black;
  border-width:1rpx;
  border-style: solid;
  width:100%;
}
.home_menu_page{
  position: fixed;
  flex: fixed;
  bottom:0rpx;
  width:100%;
}
.empty{
  font-size:15px;
  color: lightgrey;
  width:100%;
  height:auto;
  text-align: center;   /** 水平居中 **/
}
.page_slot{
  background-color: WHITE;
}
.cover{
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  top:0;
  height: 100%;
  width:100%;
  z-index:1500;
}